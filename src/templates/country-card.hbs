<div class="card">
    <div class="card-top">
        <img src="{{flags.svg}}" alt="{{name}}" width="100" height="100">
        <span class="card-title"><b> {{name}}</b></span>
    </div>
    <div class="card-body">
        <p class="card-text"><b>Capital:</b>{{capital}}</p>
        <p class="card-text"><b>Population:</b>{{population}}</p>
        <p class="card-text"><b>Languages:</b></p>
        <ul class="list-group">
            {{#each languages}}
            <li class="list-group-item">{{name}}</li>
            {{/each}}
        </ul>
    </div>
</div>

